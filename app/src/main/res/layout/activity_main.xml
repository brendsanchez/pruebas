<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGrup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/rbtVerbales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verbales"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtFisicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fisicos"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtAmenazas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amenazas"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtDañoPertenencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Robo/Daño de pertenencias"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtRequizaHumillante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requiza humillante o vejatoria"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtOtraAgresion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otro:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtOtraAgresion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="aclarar"
            android:textSize="16sp" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/radioGrup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <RadioButton
            android:id="@+id/rbtVerbales2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtFisicos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtAmenazas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtDañoPertenencias2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rbtRequizaHumillante2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="16dp" />


        <RadioButton
            android:id="@+id/rbtOtraAgresion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otro:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtOtraAgresion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="aclarar"
            android:inputType="text"
            android:textSize="16sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>


</LinearLayout>